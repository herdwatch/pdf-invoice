{
    "name": "herdwatch/pdf-invoice",
    "description": "Library to generate PDF invoices",
    "type": "library",
    "license": "GPL-2.0-or-later",
    "keywords": ["invoice", "pdf", "herdwatch","konekt", "artkonekt"],
    "support": {
        "source": "https://github.com/herdwatch/pdf-invoice"
    },
    "authors": [
        {
            "name": "Attila Fulop",
            "homepage": "https://github.com/fulopattila122"
        }
    ],
    "require": {
        "php": "^8.3",
        "ext-iconv": "*",
        "ext-mbstring": "*",
        "setasign/fpdf": "~1.8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "8 - 9"
    },
    "autoload": {
        "psr-4": { "Herdwatch\\PdfInvoice\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": {
            "Herdwatch\\PdfInvoice\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpstan": [
            "Composer\\Config::disableProcessTimeout",
            "./vendor-bin/phpstan/vendor/bin/phpstan --memory-limit=-1 -vvv"
        ],
        "phpstan-baseline": [
            "Composer\\Config::disableProcessTimeout",
            "./vendor-bin/phpstan/vendor/bin/phpstan analyze --memory-limit=-1 --generate-baseline phpstan-baseline.neon"
        ],
        "php-cs-fixer": "./vendor-bin/php-cs-fixer/vendor/bin/php-cs-fixer fix --verbose --show-progress=dots"
    }
}
