{
    "name": "herdwatch/pdf-invoice",
    "description": "Library to generate PDF invoices",
    "type": "library",
    "license": "GPL-2.0-or-later",
    "keywords": ["invoice", "pdf", "herdwatch","konekt", "artkonekt"],
    "support": {
        "source": "https://github.com/herdwatch/pdf-invoice"
    },
    "authors": [
        {
            "name": "Attila Fulop",
            "homepage": "https://github.com/fulopattila122"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "ext-iconv": "*",
        "ext-mbstring": "*",
        "setasign/fpdf": "~1.8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "8 - 9"
    },
    "autoload": {
        "psr-4": { "Herdwatch\\PdfInvoice\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": {
            "Herdwatch\\PdfInvoice\\Tests\\": "tests/"
        }
    }
}
